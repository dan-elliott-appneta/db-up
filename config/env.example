# Database Connection
# Required: Database password
DB_PASSWORD=your_password_here

# Optional: Override other settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mydb
DB_USER=postgres

# Optional: SSL settings
# SSL_VERIFY=true  # Set to false to skip certificate verification (dev/testing only)

# Alternative: Use connection URI (Heroku/Cloud compatible)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Optional: Monitoring settings
DB_CHECK_INTERVAL=60
DB_MAX_RETRIES=3

# Optional: Logging settings
DB_LOG_LEVEL=INFO
DB_LOG_FORMAT=text

